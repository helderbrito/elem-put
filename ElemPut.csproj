<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <VersionPrefix>1.0.0</VersionPrefix>
    <Authors>Helder Brito</Authors>
    <PackageId>ElemPut</PackageId>
    <Title>ElemPut Library</Title>
    <Description>A library for dynamically creating forms and tables using Blazor.</Description>
    <PackageTags>blazor;forms;tables</PackageTags>
    <ImplicitUsings>enable</ImplicitUsings>
    <RepositoryUrl>https://github.com/helderbrito/elem-put</RepositoryUrl>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageIconUrl></PackageIconUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.8" />
    <PackageReference Include="MongoDB.Driver" Version="2.28.0" />
  </ItemGroup>

</Project>
